.collect-main {
  color: #666;
  font-size: 24rpx;
  background-color: #fff;
}
.collect-main .collect-title {
  padding: 20rpx 0;
}
.collect-main .collect-title .collect-tips {
  padding: 6rpx 10rpx;
  margin: 0 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
}
.collect-main .collect-title .active {
  background-color: var(--themeColor);
  border: 1rpx solid var(--themeColor);
  color: #fff;
  border-radius: 10rpx;
}
.collect-main .collect-content .goods-items {
  display: flex;
  border-bottom: 5rpx solid #ccc;
}
.collect-main .collect-content .goods-items .goods-cover {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.collect-main .collect-content .goods-items .goods-cover image {
  width: 70%;
}
.collect-main .collect-content .goods-items .goods-info {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  /* 均等flex且留有间隙 */
}
.collect-main .collect-content .goods-items .goods-info .goods-title {
  /* 省略多余字体，用...表示 */
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.collect-main .collect-content .goods-items .goods-info .goods-price {
  color: var(--themeColor);
  font-size: 32rpx;
}
