page {
  background-color: #e6e6e6;
}
.address-row {
  width: 100%;
}
.address-row .user-info-row {
  margin: 20rpx 0;
  padding: 20rpx 20px;
  background-color: #fff;
  display: flex;
}
.address-row .user-info-row .user-info {
  flex: 5;
}
.address-row .user-info-row .user-phone {
  flex: 3;
  text-align: right;
}
.cart-content .cart-item {
  display: flex;
  height: 200rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e6e6e6;
}
.cart-content .cart-item .cart-item-cover {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cart-content .cart-item .cart-item-cover image {
  height: 80%;
}
.cart-content .cart-item .cart-item-main {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-right: 20rpx;
}
.cart-content .cart-item .cart-item-main .cart-headnote {
  font-size: 28rpx;
  color: black;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart-content .cart-item .cart-item-main .cart-footnote {
  display: flex;
  justify-content: space-between;
}
.cart-content .cart-item .cart-item-main .cart-footnote .cart-item-price {
  flex: 7;
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart-content .cart-item .cart-item-main .cart-footnote .cart-item-num {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 2;
  height: 45rpx;
  width: 45rpx;
  font-size: 28rpx;
  background-color: #e6e6e6;
  border-radius: 5rpx;
}
.foot-tool {
  border-top: 1rpx solid #e6e6e6;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}
.foot-tool .total-price-wrap {
  padding: 10rpx 10rpx;
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: right;
  align-items: flex-end;
}
.foot-tool .total-price-wrap .total-price .total-price-text {
  font-size: 32rpx;
  color: var(--themeColor);
}
.foot-tool .total-price-wrap .price-note {
  font-size: 20rpx;
}
.foot-tool .order-pay {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #fff;
  background-color: var(--themeColor);
}
