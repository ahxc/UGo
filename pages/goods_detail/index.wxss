.detai-swiper swiper {
  height: 60vw;
  text-align: center;
}
.detai-swiper swiper image {
  height: 100%;
}
.goods-price {
  padding: 15rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
}
.goods-name-row {
  display: flex;
  padding: 10rpx 0;
}
.goods-name-row .goods-name {
  flex: 6;
  color: black;
  font-size: 30rpx;
  font-weight: bolder;
  padding: 0 15rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods-name-row .goods-collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.goods-name-row .goods-collect .iconfont {
  text-align: center;
}
.goods-name-row .goods-collect .icon-shoucang1 {
  color: orangered;
}
.goods-name-row .goods-collect .text-collect {
  text-align: center;
}
.goods-info .goods-info-title {
  border-top: 10rpx solid #e6e6e6;
  border-bottom: 10rpx solid #e6e6e6;
  font-size: 32rpx;
  color: #bfbfbf;
  font-weight: bolder;
  padding: 15rpx;
  text-align: center;
}
.btm-tool {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  border-top: 1rpx solid #ccc;
}
.btm-tool .tool-item {
  font-size: 24rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  left: 0;
  /* 把button设为透明度为0覆盖在做好的div样式上
    可以实现样式与特定button功能 */
}
.btm-tool .tool-item button {
  bottom: 0;
  opacity: 0;
  /* 透明度 */
  position: absolute;
  width: 100%;
  height: 100%;
}
.btm-tool .btn-cart {
  flex: 2;
  background-color: #d4df41;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
.btm-tool .btn-buy {
  flex: 2;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
